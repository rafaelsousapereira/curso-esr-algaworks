package com.algaworks.algafood;

import org.springframework.context.annotation.Bean;
import org.springframework.context.annotation.Configuration;

import com.algaworks.algafood.di.service.AtivacaoClienteService;
import com.algaworks.algafood.notificacao.NotificacaoEmail;

//@Configuration
public class AlgaConfig {

    @Bean
    NotificacaoEmail notificadorEmail() {
		NotificacaoEmail notificador = new NotificacaoEmail("smpt.algamail.com.br");
		notificador.setCaixaAlta(true);
		
		return notificador;
	}
    
    @Bean
    AtivacaoClienteService ativacaoClienteService() {
    	return new AtivacaoClienteService(notificadorEmail());
    }
	
}
